<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Box Color: White -->
            <corners android:radius="8px" /> <!-- Radius: 8px -->
        </shape>
    </item>
    <item android:left="0.6px" android:right="0.6px" android:top="0.6px" android:bottom="0.6px">
        <shape android:shape="rectangle">
            <solid android:color="#0081F8" /> <!-- Border Color: #0081F8 -->
            <corners android:radius="8dp" /> <!-- Radius: 8px -->
        </shape>
    </item>
</layer-list>